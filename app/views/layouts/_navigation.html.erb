<div class="row">
  <div class="twelve columns">
    <nav class="top-bar">
      <ul>
        <li class="name"><h1><%= t('manager') %></li>
        <li class="toggle-topbar"><a href="#"></a></li>
      </ul>
      <section>
        <% if user_signed_in? %>
          <ul class="left">
            <%= link_to_tab t('parsers.label'), parsers_path %>
            <%= link_to_tab t('snippets.label'), snippets_path %>
            <%= link_to_tab t('parser_templates.label'), parser_templates_path %>

              <li class="has-dropdown">
              <%= link_to t('partners'), "#" %>

              <ul class="dropdown">
                <%= link_to_tab t('partners'), partners_path %>
                <%= link_to_tab t('sources'), sources_path %>
              </ul>
            </li>

            <li class="has-dropdown">
              <%= link_to t('harvest_jobs.label'), "#" %>

              <ul class="dropdown">
                <%= link_to_tab t('environments.staging'), environment_abstract_jobs_path("staging") %>
                <%= link_to_tab t('environments.production'), environment_abstract_jobs_path("production") %>
              </ul>
            </li>

            <li class="has-dropdown">
              <%= link_to t('harvest_schedules.label'), "#" %>

              <ul class="dropdown">
                <%= link_to_tab t('environments.staging'), environment_harvest_schedules_path("staging") %>
                <%= link_to_tab t('environments.production'), environment_harvest_schedules_path("production") %>
              </ul>
            </li>

            <li class="has-dropdown">
              <%= link_to t('link_checker.label'), "#" %>
              <ul class="dropdown">
                <%= link_to_tab t('statistics.environments.staging'), environment_collection_statistics_path("staging") %>
                <%= link_to_tab t('statistics.environments.production'), environment_collection_statistics_path("production") %>
                <%= link_to_tab t('link_checker.collection_rules.staging'), environment_collection_rules_path("staging") %>
                <%= link_to_tab t('link_checker.collection_rules.production'), environment_collection_rules_path("production") %>
                <%= link_to_tab t('link_checker.suppress_collections.staging'), environment_suppress_collections_path("staging") %>
                <%= link_to_tab t('link_checker.suppress_collections.production'), environment_suppress_collections_path("production") %>
              </ul>
            </li>

            <li class="has-dropdown">
              <%= link_to t('records.label'), "#" %>

              <ul class="dropdown">
                <%= link_to_tab t('records.staging'), environment_collection_records_path("staging") %>
                <%= link_to_tab t('records.production'), environment_collection_records_path("production") %>
              </ul>
            </li>
          </ul>
        <% end %>

        <ul class="right">
          <% if user_signed_in? %>
            <li class="name has-dropdown">
              <%= link_to "Hi, #{current_user.name}", "#" %>

              <ul class="dropdown">
                <%= link_to_tab t('users.all_users'), users_path %>
                <%= link_to_tab t('users.edit_profile'), edit_user_path(current_user) %> 
                <li><%= link_to t('logout'), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('login'), new_user_session_path %></li>
          <% end %>
        </ul>
      </section>
    </nav>
  </div>
</div>