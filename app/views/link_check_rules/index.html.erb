<h1 class="left">Link Check Rules - <%= params[:environment].capitalize%> </h1>
<%= link_to "New link check rule", new_environment_link_check_rule_path(environment: params[:environment]), class: "button new-right" %>

<table id="link_check_rules" class="twelve">
  <thead>
    <tr>
      <th>Partner</th>
      <th>Source Name</th>
      <th>Source ID</th>
      <th>Active?</th>
      <th>Updated At</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @link_check_rules.each do |link_check_rule| %>
    <tr>
      <td><%= link_check_rule.source.try(:partner_name) %></td>
      <td><%= link_to link_check_rule.source.try(:name), edit_source_path(link_check_rule.source) %></td>
      <td><%= link_check_rule.source.try(:source_id) %></td>
      <td><%= link_check_rule.active %></td>
      <td><%= link_check_rule.updated_at %></td>
      <td><%= link_to "Edit", edit_environment_link_check_rule_path(id: link_check_rule.id, environment: params[:environment]) %></td>
    </tr>
    <% end %>
  </tbody>
</table>