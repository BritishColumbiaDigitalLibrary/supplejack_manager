<div class="seven columns centered">
  <h2><%= t('sources.edit') %></h2>

  <h5 class="subheader">
    <strong><%= t('note') %></strong> <%= t('sources.helptext') %>
  </h5>

  <%= render 'form' %>

  <h2><%= t('sources.manage') %></h2>
  <a href="#" data-reveal-id="reindex-modal" class="button right"><%= t('sources.reindex') %></a>
  
</div>
  
<div id="reindex-modal" class="reveal-modal medium">
  <h2><%= t('sources.reindex') %></h2>
  <div class="row">
    <div class="twelve columns">
      <label class=""><%= t('simple_form.labels.sources.environment') %></label>
      <%= select_tag "environment", options_for_select(BACKEND_ENVIRONMENTS) %>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <label class=""><%= t('sources.modified_records') %></label>
      <div id="date-slider"></div>
      <div id="time"><%= t('sources.all_records') %></div>
    </div>
  </div>
  <%= link_to t('sources.reindex'), '#', remote: true, class: "right button", id: 'reindex-button', :'data-url' => reindex_source_path(@source) %>
  <a class="close-reveal-modal">&#215;</a>
</div>
