<h1 class="left">Collection Rules</h1>
<%= link_to "New collection rule", new_environment_collection_rule_path(environment: params[:environment]), class: "button new-right" %>

<table id="collection_rules" class="twelve">
  <thead>
    <tr>
      <th>Collection Title</th>
      <th>Active?</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @collection_rules.each do |collection_rule| %>
    <tr>
      <td><%= link_to collection_rule.collection_title, edit_environment_collection_rule_path(id: collection_rule.id, environment: params[:environment]) %></td>
      <td><%= collection_rule.active %></td>
      <td><%= collection_rule.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>